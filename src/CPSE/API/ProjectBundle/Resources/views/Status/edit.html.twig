{% extends 'CPSEAPIProjectBundle::layout.html.twig' %}



{% block title %} {{ 'Status edit'|trans({},'status') }}{% endblock %}

 {% block page_header_title %} {{ 'Status edit'|trans({},'status') }}{% endblock %}

{% block page_data %}

<div class="col-md-12">
    <div class="col-md-6">

    <form action="{{ path('status_update', { 'id': document.id }) }}" method="post" {{ form_enctype(edit_form) }}>
        {{ form_errors(edit_form) }}
                            	            	            	            		<div class="form-group">
                        {% set name_label %}{{ edit_form.name.vars.name|capitalize|trans({},'status') }} {% endset %}
                        {{ form_label(edit_form.name,name_label) }}
                        {{ form_widget(edit_form.name, {'attr':{'class':'form-control'}}) }}
                        {{ form_errors(edit_form.name) }}
                    </div>
                            	            	            		<div class="form-group">
                        {% set description_label %}{{ edit_form.description.vars.name|capitalize|trans({},'status') }} {% endset %}
                        {{ form_label(edit_form.description,description_label) }}
                        {{ form_widget(edit_form.description, {'attr':{'class':'form-control'}}) }}
                        {{ form_errors(edit_form.description) }}
                    </div>
                            	            	            		<div class="form-group">
                        {% set iconHTML_label %}{{ edit_form.iconHTML.vars.name|capitalize|trans({},'status') }} {% endset %}
                        {{ form_label(edit_form.iconHTML,iconHTML_label) }}
                        {{ form_widget(edit_form.iconHTML, {'attr':{'class':'form-control'}}) }}
                        {{ form_errors(edit_form.iconHTML) }}
                    </div>
                            	            	{{ form_rest(edit_form) }}
            <p>
                <button type="submit" class="btn btn-success pull-right">
                	<i class="glyphicon glyphicon-edit" aria-hidden="true"></i>        
                     {{ 'Update'|trans({},'common') }}
                </button>
            </p>
    </form>
</div>
</div>


<div class="col-md-12 actions-list">
</div>
<div class="col-md-12 back-link">
	<a href="{{ path('status') }}">
            <i class="glyphicon glyphicon-arrow-left" aria-hidden="true"></i>
             {{ 'Back to the list'|trans({},'common') }}
        </a>
</div>{% endblock %}