{% extends 'CPSEAPIProjectBundle::layout.html.twig' %}

{% set customActiveRoute = 'projectcategory' %}

{% block title %} {{ 'ProjectCategory'|trans({},'projectcategory') }}{% endblock %}

 {% block page_header_title %} {{ 'ProjectCategory'|trans({},'projectcategory') }}{% endblock %}

{% block page_data %}

<table class="table tabl-striped">
    <tbody>				        <tr>
            <th>{{'Name'|trans({},'projectcategory') }}</th>
            <td>{{ document.name }}</td>
        </tr>
        		        <tr>
            <th>{{'Description'|trans({},'projectcategory') }}</th>
            <td>{{ document.description }}</td>
        </tr>
        <tr>
            <th>{{'Documentcategory'|trans({},'projectcategory') }}</th>
            <td>{{ document.documentCategory }}</td>
        </tr>
        		        <tr>
            <th>{{'Parent'|trans({},'projectcategory') }}</th>
            <td>{{ document.parent }}</td>
        </tr>
        		        <tr>
            <th>{{'CreatedBy'|trans({},'common') }}</th>
            <td>{{ document.createdBy }}</td>
        </tr>
        <tr>
            <th>{{'CreatedAt'|trans({},'common') }}</th>
            <td>{{ document.createdAt|date('Y-m-d H:i:s') }}</td>
        </tr>
        
    </tbody>
</table>

<div class="col-md-12 actions-list">
    <div class="action">
    	<a class="btn btn-info" href="{{ path('projectcategory_edit', { 'id': document.id }) }}">
            <i class="glyphicon glyphicon-edit" aria-hidden="true"></i>
            {{ 'Edit'|trans({},'common') }}
        </a>
    </div>
    <div class="action">
    	<form class="delete-form" action="{{ path('projectcategory_delete', { 'id': document.id }) }}" method="post">
            {{ form_widget(delete_form) }}
            <button class="btn btn-danger" type="submit">
            	<i class="glyphicon glyphicon-remove" aria-hidden="true"></i>
                {{ 'Delete'|trans({},'common') }}
            </button>
        </form>
    </div>
</div>
<div class="col-md-12 back-link">
	<a href="{{ path('projectcategory') }}">
            <i class="glyphicon glyphicon-arrow-left" aria-hidden="true"></i>
             {{ 'Back to the list'|trans({},'common') }}
        </a>
</div>{% endblock %}
