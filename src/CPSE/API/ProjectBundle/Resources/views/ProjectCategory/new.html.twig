{% extends 'CPSEAPIProjectBundle::layout.html.twig' %}

{% set customActiveRoute = 'projectcategory' %}

{% block title %} {{ 'ProjectCategory creation'|trans({},'projectcategory') }}{% endblock %}

 {% block page_header_title %} {{ 'ProjectCategory creation'|trans({},'projectcategory') }}{% endblock %}

{% block page_data %}

<div class="col-md-12">
    <div class="col-md-6">
        <form action="{{ path('projectcategory_create') }}" method="post" {{ form_enctype(form) }}>
            {{ form_errors(form) }}
        			<div class="form-group">
                        {% set parent_label %}{{ form.parent.vars.name|capitalize|trans({},'projectcategory') }} {% endset %}
                        {{ form_label(form.parent,parent_label) }}
                        {{ form_widget(form.parent, {'attr':{'class':'form-control'}}) }}
                        {{ form_errors(form.parent) }}
                    </div>
            		<div class="form-group">
                        {% set name_label %}{{ form.name.vars.name|capitalize|trans({},'projectcategory') }} {% endset %}
                        {{ form_label(form.name,name_label) }}
                        {{ form_widget(form.name, {'attr':{'class':'form-control'}}) }}
                        {{ form_errors(form.name) }}
                    </div>
            		<div class="form-group">
                        {% set description_label %}{{ form.description.vars.name|capitalize|trans({},'projectcategory') }} {% endset %}
                        {{ form_label(form.description,description_label) }}
                        {{ form_widget(form.description, {'attr':{'class':'form-control'}}) }}
                        {{ form_errors(form.description) }}
                    </div>
                    <div class="form-group">
                        {% set documentcategory_label %}{{ form.documentCategory.vars.name|capitalize|trans({},'projectcategory') }} {% endset %}
                        {{ form_label(form.documentCategory,documentcategory_label) }}
                        {{ form_widget(form.documentCategory, {'attr':{'class':'form-control'}}) }}
                        {{ form_errors(form.documentCategory) }}
                    </div>
                            	            	            		
                            	            	{{ form_rest(form) }}
            <p>
                <button type="submit" class="btn btn-success pull-right">
                	<i class="glyphicon glyphicon-edit" aria-hidden="true"></i>        
                     {{ 'Add'|trans({},'common') }}
                </button>
            </p>
        </form>
    </div>
</div>
<div class="col-md-12 actions-list">
</div>
<div class="col-md-12 back-link">
	<a href="{{ path('projectcategory') }}">
            <i class="glyphicon glyphicon-arrow-left" aria-hidden="true"></i>
             {{ 'Back to the list'|trans({},'common') }}
        </a>
</div>{% endblock %}
{% block inlinescripts %}
	<script type="text/javascript" src="{{ asset('js/item-select-field.js') }}"></script>
	<script type="text/javascript">
    	$(document).ready(function(){
        	var title = '{{ 'Please choose folder'|trans({},'projectcategory') }}';
        	var sourceUrl = '{{ path('api_listcat') }}';
    		$('#cpse_api_projectbundle_projectcategorytype_documentCategory').referenceItemField(
    	    		{'title':title, 'dataSource': sourceUrl});
    	});
    </script>
	
{% endblock %}