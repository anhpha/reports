{% extends 'CPSEAPIProjectBundle::layout.html.twig' %}



{% block title %} {{ 'DocumentStatus'|trans({},'documentstatus') }}{% endblock %}

 {% block page_header_title %} {{ 'DocumentStatus'|trans({},'documentstatus') }}{% endblock %}

{% block page_data %}

<table class="table tabl-striped">
    <tbody>				        <tr>
            <th>{{'Name'|trans({},'documentstatus') }}</th>
            <td>{{ document.name }}</td>
        </tr>
        		        <tr>
            <th>{{'Description'|trans({},'documentstatus') }}</th>
            <td>{{ document.description }}</td>
        </tr>
        		        <tr>
            <th>{{'Iconhtml'|trans({},'documentstatus') }}</th>
            <td>{{ document.iconHTML }}</td>
        </tr>
        
    </tbody>
</table>

<div class="col-md-12 actions-list">
    <div class="action">
    	<a class="btn btn-info" href="{{ path('documentstatus_edit', { 'id': document.id }) }}">
            <i class="glyphicon glyphicon-edit" aria-hidden="true"></i>
            {{ 'Edit'|trans({},'common') }}
        </a>
    </div>
    <div class="action">
    	<form class="delete-form" action="{{ path('documentstatus_delete', { 'id': document.id }) }}" method="post">
            {{ form_widget(delete_form) }}
            <button class="btn btn-danger" type="submit">
            	<i class="glyphicon glyphicon-remove" aria-hidden="true"></i>
                {{ 'Delete'|trans({},'common') }}
            </button>
        </form>
    </div>
</div>
<div class="col-md-12 back-link">
	<a href="{{ path('documentstatus') }}">
            <i class="glyphicon glyphicon-arrow-left" aria-hidden="true"></i>
             {{ 'Back to the list'|trans({},'common') }}
        </a>
</div>{% endblock %}
