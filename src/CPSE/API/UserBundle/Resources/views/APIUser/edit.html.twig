{% extends 'CPSEAPIProjectBundle::layout.html.twig' %}

{% set customActiveRoute = 'apiuser' %}
{% trans_default_domain 'apiuser' %}
{% block title %} {{ 'APIUser edit'|trans({},'apiuser') }}{% endblock %}

 {% block page_header_title %} {{ 'APIUser edit'|trans({},'apiuser') }}{% endblock %}

{% block page_data %}

<div class="col-md-12">
    <div class="col-md-6">

    <form action="{{ path('apiuser_update', { 'id': document.id }) }}" method="post" {{ form_enctype(edit_form) }}>
        {{ form_errors(edit_form) }}
                  <div class="form-group">
                        {% set fullName_label %}{{ edit_form.fullName.vars.name|capitalize|trans({},'apiuser') }} {% endset %}
                        {{ form_label(edit_form.fullName,fullName_label) }}
                        {{ form_widget(edit_form.fullName, {'attr':{'class':'form-control'}}) }}
                        {{ form_errors(edit_form.fullName) }}
                    </div>
                    
                            	            	            		<div class="form-group">
                        {% set email_label %}{{ edit_form.email.vars.name|capitalize|trans({},'apiuser') }} {% endset %}
                        {{ form_label(edit_form.email,email_label) }}
                        {{ form_widget(edit_form.email, {'attr':{'class':'form-control'}}) }}
                        {{ form_errors(edit_form.email) }}
                    </div>
                    <div class="form-group">
                        {% set roles_label %}{{ edit_form.roles.vars.name|capitalize|trans({},'apiuser') }} {% endset %}
                        <label>{{ roles_label }}</label>
                    	<div class="group-controls">
                        
                        {% for role in edit_form.roles.children %}
                        <div class="checkbox">
                        	<label for="{{ role.vars.id }}">
                        		{{ form_widget(role) }}
                        		{{ role.vars.label|trans }}
                        	</label>
                        </div>
                        {% endfor %}
                        </div>
                    </div>
                    <div class="checkbox">
                        {% set enabled_label %}{{ edit_form.enabled.vars.name|capitalize|trans({},'apiuser') }} {% endset %}
                        <label for="{{ edit_form.enabled.vars.id }}">
                        	{{ form_widget(edit_form.enabled) }}{{ enabled_label }}
                        </label>
                        {{ form_errors(edit_form.enabled) }}
                    </div>
                    <div class="checkbox">
                        {% set locked_label %}{{ edit_form.locked.vars.name|capitalize|trans({},'apiuser') }} {% endset %}
                        <label for="{{ edit_form.locked.vars.id }}">
                        	{{ form_widget(edit_form.locked) }}{{ locked_label }}
                        </label>
                        
                        {{ form_errors(edit_form.locked,{'attr':{'class':'alert alert-danger'}}) }}
                    </div>
                   
                    {{ form_rest(edit_form) }}
            <p>
                <button type="submit" class="btn btn-success pull-right">
                	<i class="glyphicon glyphicon-floppy-save" aria-hidden="true"></i>        
                     {{ 'Update'|trans({},'common') }}
                </button>
            </p>
    </form>
</div>
</div>


<div class="col-md-12 actions-list">
</div>
<div class="col-md-12 back-link">
	<a href="{{ path('apiuser') }}">
            <i class="glyphicon glyphicon-arrow-left" aria-hidden="true"></i>
             {{ 'Back to the list'|trans({},'common') }}
        </a>
</div>{% endblock %}