<div class="col-md-12 actions-list">
{% if ('edit' in actions) and (not hide_edit) %}
    <div class="action">
    	<a class="btn btn-info" href="{{ "{{ path('"~ route_name_prefix ~"_edit', { 'id': document.id }) }}" }}">
            <i class="glyphicon glyphicon-edit" aria-hidden="true"></i>
            {{ "{{ 'Edit'|trans({},'common') }}" }}
        </a>
    </div>
{% endif %}
{% if ('delete' in actions) and (not hide_delete) %}
    <div class="action">
    	<form class="delete-form" action="{{ "{{ path('"~ route_name_prefix ~"_delete', { 'id': document.id }) }}" }}" method="post">
            {{ '{{ form_widget(delete_form) }}' }}
            <button class="btn btn-danger" type="submit">
            	<i class="glyphicon glyphicon-remove" aria-hidden="true"></i>
                {{ "{{ 'Delete'|trans({},'common') }}" }}
            </button>
        </form>
    </div>
{% endif %}
</div>
<div class="col-md-12 back-link">
	<a href="{{ "{{ path('"~ route_name_prefix ~"') }}" }}">
            <i class="glyphicon glyphicon-arrow-left" aria-hidden="true"></i>
            {{ " {{ 'Back to the list'|trans({},'common') }}" }}
        </a>
</div>